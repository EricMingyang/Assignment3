  <button id="submit" onclick="submit()">Submit</button>
  <script >
    function submit(){
      var name_valid = 0;
      /*
      name_valid:
      0 -> valid
      1 -> first name is empty
      2 -> last name is empty
      */
      var first_name = document.getElementById("fname").value;
      var middle_name = document.getElementById('mname').value;
      var last_name = document.getElementById('lname').value;
      if (first_name == ""){
        name_valid = 1;
      }
      else if (last_name == ""){
        name_valid = 2;
      }

      var email_valid = 0;
      var email = document.getElementById('email_input').value;
      if (email == ''){
        email_valid = 1;
      }

      var phone_valid = 0;
      var phone = document.getElementById('phone_input').value;
      if (phone.length != 10){
        phone_valid = 1;
      }
      for (var i = 0; i < phone.length; i++){
        if (phone[i] < '0' || phone[i] > '9'){
          phone_valid = 1;
        }
      }

      var field_valid = 0;
      var field = document.getElementById('field_input').value;
      if (field == ""){
        field_valid = 1;
      }
      var text_area_valid = 0;
      var textarea = document.getElementById('textarea_input').value;
      if (textarea == ''){
        text_area_valid = 1;
      }
      if (name_valid == 1){
        alert("You must enter a valid name. ");
      }
      else if (email_valid == 1){
        alert("You must enter a valid email.");
      }
      else if (phone_valid == 1){
        alert("You must enter a valid phone number. ");
      }
      else if (field_valid){
        alert("Field of study cannot be empty");
      }
      else if (text_area_valid == 1){
        alert("Description cannot be empty. ");
      }
      else{
        alert("Dear " + first_name + " " + last_name + ", thanks for applying! ");
      }
    }
    function day(){
      var body = document.getElementsByTagName("body");
      body[0].style.background = 'RGB(199, 237, 204)';
      var h1 = document.getElementsByTagName('h1');
      h1[0].style.color = 'purple';
      var h2 = document.getElementsByTagName('h2');
      for (var i = 0; i < h2.length; i++){
        h2[i].style.color = 'purple';
      }
      var label = document.getElementsByTagName('label');
      for (var i = 0; i < label.length; i++){
        label[i].style.color = 'purple';
      }
      var p = document.getElementsByTagName('p');
      for (var i = 0; i < p.length; i++){
        p[i].style.color = 'purple';
      }
    }
    function night(){
      var body = document.getElementsByTagName("body");
      body[0].style.background = 'darkgrey';
      var h1 = document.getElementsByTagName('h1');
      h1[0].style.color = 'white';
      var h2 = document.getElementsByTagName('h2');
      for (var i = 0; i < h2.length; i++){
        h2[i].style.color = 'white';
      }
      var label = document.getElementsByTagName('label');
      for (var i = 0; i < label.length; i++){
        label[i].style.color = 'white';
      }
      var p = document.getElementsByTagName('p');
      for (var i = 0; i < p.length; i++){
        p[i].style.color = 'white';
      }
    }
    function reset(){
      var body = document.getElementsByTagName("body");
      body[0].style.background = 'lightgrey';
      var h1 = document.getElementsByTagName('h1');
      h1[0].style.color = 'black';
      var h2 = document.getElementsByTagName('h2');
      for (var i = 0; i < h2.length; i++){
        h2[i].style.color = 'black';
      }
      var label = document.getElementsByTagName('label');
      for (var i = 0; i < label.length; i++){
        label[i].style.color = 'black';
      }
      var p = document.getElementsByTagName('p');
      for (var i = 0; i < p.length; i++){
        p[i].style.color = 'black';
      }
    }
  </script>
